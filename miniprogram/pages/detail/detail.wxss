.container {
  padding: 24rpx;
  background: #fff;
}

.article-header {
  margin-bottom: 32rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
}

.article-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  margin-bottom: 32rpx;
}

.article-actions {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1px solid #f0f0f0;
}

.action-btn {
  background: #f5f5f5;
  border: none;
  color: #666;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.action-btn.favorite {
  background: #ffe4e6;
  color: #ff4d4f;
}

.iconfont {
  margin-right: 8rpx;
}

.loading {
  text-align: center;
  padding: 48rpx;
  color: #999;
} 