<view class="container">
  <view class="article-detail" wx:if="{{!loading}}">
    <view class="article-header">
      <text class="article-title">{{article.title}}</text>
      <view class="article-meta">
        <text class="article-source">{{article.source}}</text>
        <text class="article-date">{{article.publishDate}}</text>
      </view>
    </view>
    
    <view class="article-content">
      <text>{{article.content}}</text>
    </view>
    
    <view class="article-actions">
      <button 
        class="action-btn {{isFavorite ? 'favorite' : ''}}" 
        bindtap="handleFavorite"
      >
        <text class="iconfont {{isFavorite ? 'icon-star-filled' : 'icon-star'}}"></text>
        {{isFavorite ? '已收藏' : '收藏'}}
      </button>
      <button 
        class="action-btn"
        open-type="share"
      >
        <text class="iconfont icon-share"></text>
        分享
      </button>
    </view>
  </view>
  
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
</view> 