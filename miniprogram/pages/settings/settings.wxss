.container {
  padding: 20rpx;
}

.admin-panel {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.tabs {
  display: flex;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.tab {
  padding: 20rpx 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1890ff;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 2px;
  background: #1890ff;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  color: #333;
}

input {
  border: 1px solid #ddd;
  padding: 10rpx;
  border-radius: 6rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-actions {
  margin-top: 30rpx;
  display: flex;
  gap: 20rpx;
}

.keywords-manager {
  display: flex;
  gap: 20rpx;
}

.category-list {
  width: 200rpx;
  border-right: 1px solid #eee;
}

.category-item {
  padding: 20rpx;
  color: #666;
}

.category-item.active {
  color: #1890ff;
  background: #f0f7ff;
}

.keyword-list {
  flex: 1;
}

.keyword-input {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.keyword-items {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.keyword-item {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.delete {
  margin-left: 10rpx;
  color: #999;
}

/* 修改密码验证界面的样式 */
.password-verify {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 0 30rpx;
}

.verify-box {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  width: 100%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.verify-box .title {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 40rpx;
  display: block;
}

.password-input {
  border: 1px solid #ddd;
  padding: 20rpx;
  border-radius: 6rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  height: 88rpx;
  line-height: 88rpx;
}

.verify-btn {
  width: 100% !important;
  margin-top: 20rpx !important;
} 